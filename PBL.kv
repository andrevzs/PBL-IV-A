<SenhaQuebradorApp>
    orientation: 'vertical'
    Label:
        text: 'Acertei?'
        
    Label:
        text: '-Escolha uma senha e acerte as escolhas'
    
    Button:
        text: 'Clique aqui para gerar uma senha!'
        on_release: root.gerarSenha()
    Label:
        text: 'Entre com um numero de 0 a 10'
    TextInput:
        id: numero
        hint_text: 'Digite aqui um numero de 0 a 10'
        on_text: root.numero()
    GridLayout:
        cols: 4
        Label:
            text: "Biscoito"
        CheckBox:
            group: 'traquinas'
            on_active: root.check(0)
        Label:
            text: "Bolacha"
        CheckBox:
            group: 'traquinas'
            on_active: root.check(1)
    Label:
        text: "Clique no carro que você mais gosta"
    Spinner:
        id:spinersplendi
        text: "Carro mais fvck"
        values: ['Carro WhatsApp', 'Carro Telegram', 'Carro Discord', 'Carro Skype', 'Carro MSN']
        on_text: root.carro(spinersplendi.text)
    GridLayout:
        cols: 3
        Label:
            text: 'Coca-Cola'
        Label:
            text: 'Pepsi'
        Label:
            text: 'Guaraná'
        CheckBox:
            on_active: root.refri(0)
        CheckBox:
            on_active: root.refri(1)
        CheckBox:
            on_active: root.refri(2)
    Button:
        text: "Verificar Resultados!"
        on_release: root.verificar()
    Label:
        id: resposta
        text: ""
