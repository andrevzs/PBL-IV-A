<SenhaQuebradorApp>
    orientation: 'vertical'

    Label:
        font_size: 20
        font_style: 'bold'
        text: 'SenhaQuebrador-3000'
    Label:
        text: '~ Forme uma senha usando as opções e tente descobrir a verdadeira ~'

    Button:
        background_color: (0.19, 0.81, 1.00)
        text: 'Clique aqui para gerar a senha!'
        on_release: root.gerarSenha()

    Label:
        text: 'Digite um número de 0 a 10:'
    TextInput:
        id: numero
        hint_text: 'Digite o número aqui'
        on_text: root.numero()

    GridLayout:
        background_color: (0.19, 0.81, 1.00)
        cols: 4
        Label:
            text: 'Biscoito'
        CheckBox:
            group: 'traquinas'
            on_active: root.check(0)
        Label:
            text: 'Bolacha'
        CheckBox:
            group: 'traquinas'
            on_active: root.check(1)

    Label:
        text: 'Escolha um carro drip'
    Spinner:
        background_color: (0.49, 0.48, 0.59)
        id: spinersplendi
        text: 'Carro mais fvck'
        values: ['Carro WhatsApp', 'CarroTelegram', 'Carro Discord', 'Carro Skype', 'Carro MSN']
        on_text: root.carro(spinersplendi.text)

    GridLayout:
        cols: 3
        Label:
            text: 'Coca-Cola'
        Label:
            text: 'Pepsi'
        Label:
            text: 'Guaraná'
        CheckBox:
            on_active: root.refri(0)
        CheckBox:
            on_active: root.refri(1)
        CheckBox:
            on_active: root.refri(2)

    Button:
        background_color: (0.19, 0.81, 1.00)
        text: 'Verificar resultado!'
        on_release: root.verificar()

    Label:
        id: resposta
        text: ''

    Button:
        background_color: (1.00, 0.05, 0.33)
        text: 'SAIR'
        on_release:root.sair()
